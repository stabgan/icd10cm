{
  "name": "icd10cm-desktop",
  "private": true,
  "version": "0.1.0",
  "description": "A desktop application for browsing and searching ICD-10-CM diagnosis codes",
  "author": {
    "name": "Kaustabh",
    "email": "mail@stabgan.com"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "node server.js",
    "dev:all": "concurrently -k \"npm run dev\" \"npm run server\"",
    "start": "npm run build && npm run server",
    "start:all": "node start.js",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on tcp:3000 && electron .",
    "electron:build": "node scripts/build-electron.cjs",
    "electron:pack": "electron-builder --dir",
    "build:icons": "node scripts/build-icons.cjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "file-saver": "^2.0.5",
    "flexsearch": "^0.8.103",
    "idb": "^8.0.2",
    "jspdf": "^3.0.1",
    "mongodb": "^6.3.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.21.1",
    "react-syntax-highlighter": "^15.6.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^30.1.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "fs-extra": "^11.3.0",
    "pkg-types": "^2.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "vite-plugin-node-polyfills": "^0.23.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourdomain.icd10cm",
    "productName": "ICD-10-CM Browser",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server.js",
      "uploads/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "asar": true,
    "forceCodeSigning": false,
    "electronVersion": "30.1.0"
  }
}
