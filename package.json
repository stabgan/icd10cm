{
  "name": "icd10cm-desktop",
  "private": true,
  "version": "0.1.0",
  "description": "A desktop application for browsing and searching ICD-10-CM diagnosis codes",
  "author": {
    "name": "Kaustabh",
    "email": "mail@stabgan.com"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "node server.js",
    "dev:all": "concurrently -k \"npm run dev\" \"npm run server\"",
    "start": "npm run build && npm run server",
    "start:all": "node start.js",
    "electron:dev": "cross-env NODE_ENV=development concurrently -k \"npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on tcp:3000 && electron .",
    "electron:package": "npm run build && electron-packager . icd10cm-browser --platform=win32 --arch=x64 --out=out --asar --overwrite",
    "electron:zip": "powershell -Command \"Compress-Archive -Path './out/icd10cm-browser-win32-x64' -DestinationPath './out/ICD-10-CM-Browser-Windows.zip' -Force\"",
    "electron:build:windows": "npm run build && npm run electron:package && npm run electron:zip",
    "electron:create-installer": "electron-installer-windows --src out/icd10cm-browser-win32-x64/ --dest out/installer/ --config installer-config.json",
    "electron:build": "node scripts/create-icon.js && npm run build && electron-builder --win",
    "electron:winstaller": "node scripts/create-icon.js && npm run electron:package && node scripts/create-windows-installer.js",
    "create:icon": "node scripts/create-icon.js",
    "build:icons": "npx --yes electron-icon-maker --input=./public/icon.png --output=./build",
    "create:shortcut": "node scripts/create-windows-shortcut.cjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "file-saver": "^2.0.5",
    "flexsearch": "^0.8.103",
    "idb": "^8.0.2",
    "jspdf": "^3.0.1",
    "mongodb": "^6.3.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.21.1",
    "react-syntax-highlighter": "^15.6.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.1.0",
    "electron-builder": "^25.1.8",
    "electron-icon-maker": "^0.0.5",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^17.1.2",
    "electron-winstaller": "^5.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "fs-extra": "^11.3.0",
    "jimp": "^1.6.0",
    "pkg-types": "^2.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "vite-plugin-node-polyfills": "^0.23.0",
    "wait-on": "^7.2.0"
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
